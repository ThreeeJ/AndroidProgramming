<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 에러 상태 -->
    <item android:state_activated="false">
        <shape>
            <solid android:color="#CCFFFFFF" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="#F44336" />
            <padding
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp"
                android:top="8dp" />
        </shape>
    </item>
    <!-- 성공 상태 -->
    <item android:state_activated="true">
        <shape>
            <solid android:color="#CCFFFFFF" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="#4CAF50" />
            <padding
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp"
                android:top="8dp" />
        </shape>
    </item>
    <!-- 기본 상태 -->
    <item>
        <shape>
            <solid android:color="#CCFFFFFF" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" />
            <padding
                android:bottom="8dp"
                android:left="12dp"
                android:right="12dp"
                android:top="8dp" />
        </shape>
    </item>
</selector> 